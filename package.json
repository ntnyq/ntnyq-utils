{
  "name": "@ntnyq/utils",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@7.14.2",
  "keywords": [],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "scripts": {
    "clean": "pnpm -r --parallel run clean",
    "build": "pnpm -r --stream run build",
    "dev": "pnpm -r --stream run dev",
    "lint": "eslint .",
    "prepublishOnly": "pnpm run build",
    "play": "pnpm --filter=playground run play",
    "test": "vitest --passWithNoTests",
    "prepare": "husky install",
    "typecheck": "pnpm -r --parallel run typecheck",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck clean build",
    "release:publish": "pnpm -r publish",
    "release:version": "bumpp package.json packages/*/package.json"
  },
  "devDependencies": {
    "@ntnyq/eslint-config-typescript": "^1.0.7",
    "@types/node": "^18.11.9",
    "bumpp": "^8.2.1",
    "eslint": "^8.27.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "pnpm": "^7.14.2",
    "rimraf": "^3.0.2",
    "tsx": "^3.11.0",
    "typescript": "^4.8.4",
    "unbuild": "^0.9.4",
    "vite": "^3.2.2",
    "vitest": "^0.24.5"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yml,yaml}": "eslint --fix"
  }
}
