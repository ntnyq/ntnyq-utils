{
  "name": "ntnyq-utils",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r --stream run build",
    "dev": "pnpm -r --stream run dev",
    "lint": "eslint",
    "play": "pnpm -C playground run play",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:publish",
    "release:check": "run-p lint typecheck test",
    "release:publish": "pnpm run build && changeset publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@ntnyq/eslint-config": "^5.1.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^24.0.15",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.4",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "tsdown": "^0.12.9",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "nano-staged": {
    "*.{js,ts,cjs,mjs,md,yml,yaml,json}": "eslint --fix"
  }
}
